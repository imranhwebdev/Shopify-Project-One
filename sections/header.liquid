<!-- sections/header.liquid -->
<header id="header" class="z-50 transition-all duration-300">
  <div class="container mx-auto flex items-center justify-between border border-gray-200 bg-white py-2.5 px-3 md:px-5">
    {% render 'logo' %}

    <nav id="navMenu" class="heading-menu hidden lg:flex flex-col lg:flex-row gap-4">
      <ul class="flex flex-col lg:flex-row gap-4">
        <li><a href="#about" class="uppercase text-gray-900 hover:text-blue-600">about</a></li>
        <li><a href="#whats-coming" class="uppercase text-gray-900 hover:text-blue-600">what’s coming</a></li>
        <li><a href="#howTo" class="uppercase text-gray-900 hover:text-blue-600">HOW TO BUY</a></li>
        <li><a href="#tokenomics" class="uppercase text-gray-900 hover:text-blue-600">Tokenomics</a></li>
        <li class="lg:hidden flex items-center mt-3">
          {% render 'social-icons' %}
          <a href="{{ settings.buy_now_url }}" class="btn ml-4">Meet bito</a>
        </li>
      </ul>
    </nav>

    <div class="flex items-center gap-4">
      {% render 'social-icons' %}
      <a href="{{ settings.buy_now_url }}" class="btn ml-4 hidden md:inline-block">Meet bito</a>
      <button id="menuOpenBtn" class="lg:hidden ml-3 text-gray-700">☰</button>
    </div>
  </div>
</header>

<script>
  const navMenu = document.getElementById('navMenu');
  const menuOpenBtn = document.getElementById('menuOpenBtn');
  let isMenuOpen = false;

  menuOpenBtn?.addEventListener('click', () => {
    isMenuOpen = !isMenuOpen;
    navMenu.classList.toggle('hidden', !isMenuOpen);
    document.body.classList.toggle('overflow-hidden', isMenuOpen);
  });

  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const header = document.getElementById('header');
    const currentScroll = window.scrollY;

    if (currentScroll === 0 || currentScroll < lastScroll) {
      header.classList.add('fixed', 'top-0', 'w-full');
    } else {
      header.classList.remove('fixed');
    }
    lastScroll = currentScroll;
  });
</script>
