<div class="announcementbar bg-[#ddd]">
  <div class="container mx-auto">
    <div class="announce-text text-center py-5">
      <p>{{ section.settings.message }}</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Announcementbar",
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "Announcement Text",
      "default": "25% off for us based delivery"
    }
  ]
}
{% endschema %}
