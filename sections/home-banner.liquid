{%- style -%}
  .image-banner-main svg {
    width: 100%;
    height: 100%;
  }
{%- endstyle -%}
<div class="image-banner relative">
  {% comment %}
    <div class="image-banner-main absolute top-0 left-0 w-full h-full -z-1">
      {% assign image_width = section.settings.image.width | divided_by: section.settings.image.aspect_ratio %}
      {% if section.settings.image != blank %}
        {{
          section.settings.image
          | image_url: width: 5000
          | image_tag:
            widths: '375,480,767,992,1280,1440,1920,3000',
            width: section.settings.image.width,
            height: image_width,
            fethpriority: 'high'
        }}
      {% else %}
        {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  {% endcomment %}
  <div class="image-banner-main absolute top-0 left-0 w-full h-full -z-1">
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | image_url: width: 5000 }}"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
        alt="{{ section.settings.image.alt | escape }}"
        class="w-full h-full object-cover"
      >
    {% else %}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>

  <div class="container">
    <div
      class="
        banner-content
        pt-[{{ section.settings.padding_top_mobile }}px]
        lg:pt-[{{ section.settings.padding_top_desktop }}px]

        pb-[{{ section.settings.padding_bottom_mobile }}px]
        lg:pb-[{{ section.settings.padding_bottom_desktop }}px]

         md:max-w-[{{section.settings.content_width}}%]
      "
    >
      <h1 class="text-3xl md:text-5xl font-bold leading-tight mb-4">{{ section.settings.heading }}</h1>
      <p>
        {% if section.settings.sub_heading != blank %}
          {{ section.settings.sub_heading }}
        {% endif %}
      </p>
      <a
        href="{{section.settings.url_1}}"
        class="btn bg-amber-100 py-3 px-5 block rounded-full mt-4 hover:bg-[#ccc] transition"
      >
        {{- section.settings.label_1 -}}
      </a>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Home Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Banner Content"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding Top (Mobile)",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Padding Top (Desktop)",
      "min": 100,
      "max": 500,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding Bottom (Mobile)",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Padding Bottom (Desktop)",
      "min": 100,
      "max": 500,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "content_width",
      "label": "Content Width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Best Collection"
    },
    {
      "type": "richtext",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries,"
    },
    {
      "type": "text",
      "id": "label_1",
      "label": "Button label",
      "default": "Buy Now"
    },
    {
      "type": "url",
      "id": "url_1",
      "label": "Button url"
    }
  ]
}
{% endschema %}
