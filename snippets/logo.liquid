<a href="{{ shop.url }}" class="text-xl font-bold text-gray-900 hover:text-blue-600 inline-block">
  {% if settings.logo != blank %}
    <img
      src="{{ settings.logo | image_url: width: 100 }}"
      alt="{{ shop.name }}"
      width="120"
      height="40"
      class="w-[200px] h-[120px]"
      loading="lazy"
    >
  {% else %}
    {{ shop.name }}
  {% endif %}
</a>
